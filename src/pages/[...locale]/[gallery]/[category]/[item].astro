---
import type {
  InferGetStaticPropsType,
  InferGetStaticParamsType,
} from "astro";
import DefaultLayout from "../../../../layouts/DefaultLayout.astro";
import { resolvePath } from "../../../../utils/path";
import { Image } from "astro:assets";
import { galleryCategoryItemPaths } from '../../../_paths';
import { getLocaleFromUrl, useTranslations } from '../../../../utils/i18n';
import FullContent from '../../../../layouts/sections/FullContent.astro';

export const getStaticPaths = galleryCategoryItemPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;
const { page, translations, next, prev } = Astro.props as Props;
type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const {
  locale: localeSlug,
  gallery: gallerySlug,
  category: categorySlug,
} = Astro.params as Params;
const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<style>
  div {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin: 1rem 0;
  }
</style>

<DefaultLayout translations={translations}>
  <FullContent>
    <h1>Bild</h1>
    <Image src={page.src} alt={`Photo: ${page.title}`} width={1920} />
    <div>
      { prev && <a href={resolvePath(localeSlug, gallerySlug, categorySlug, prev)}>{t('pagination.previous')}</a> }
      { next && <a href={resolvePath(localeSlug, gallerySlug, categorySlug, next)}>{t('pagination.next')}</a> }
    </div>
  </FullContent>
</DefaultLayout>
